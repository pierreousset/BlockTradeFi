{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "actions/*": ["actions/*"],
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "locales/*": ["locales/*"],
      "reducers/*": ["reducers/*"],
      "pages/*": ["screens/*"],
      "services/*": ["services/*"]
    },
    "strictNullChecks": false,
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "jsxImportSource": "@emotion/react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "typeRoots": ["node_modules/@types"]
    //"types": ["@emotion/react/types", "@emotion/react/types/css-prop"]
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "plugin:react/recommended"]
}
